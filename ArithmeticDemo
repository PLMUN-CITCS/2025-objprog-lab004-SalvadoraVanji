public class ArithmeticDemo {
    public static void main(String[] args) {

        int num1 = 10;
        int num2 = 5;
        double num3 = 3.0;

        // Arithmetic operations
        int sum = num1 + num2;
        int difference = num1 - num2;
        int product = num1 * num2;
        int quotient = num1 / num2;  // Integer division, result is truncated
        int remainder = num1 % num2;

        // The expression with operator precedence
        int expressionResult = num1 + num2 * 2 - (num1 / num2); // Follow PEMDAS

        // Display results of basic operations
        System.out.println("Sum: " + sum);
        System.out.println("Difference: " + difference);
        System.out.println("Product: " + product);
        System.out.println("Quotient: " + quotient);
        System.out.println("Remainder: " + remainder);

        // Display the result of the expression and explain order of operations
        System.out.println("Expression Result: " + expressionResult); 
        // Explaining the order of operations in the expression
        System.out.println("Explanation of Expression: num1 + (num2 * 2) - (num1 / num2)");
        // For more accurate division, you can cast num1 to double
        System.out.println("Expression Result with Decimal Division: " + (num1 + num2 * 2 - (num1 / (double) num2)));  // Using double for division
    }
}
